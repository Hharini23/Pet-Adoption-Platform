    <script>
        function showOrderForm(petName, price, age) {
            document.getElementById('orderForm').style.display = 'block';
            document.getElementById('petName').value = petName;
            // You can also display price and age in the form or just keep them in the info section
        }

        async function submitOrder(event) {
            event.preventDefault();

            const formElement = document.getElementById('petOrderForm');
            const formData = new FormData(formElement);

            // Log the form data to confirm values
            for (let [key, value] of formData.entries()) {
                console.log(key, value);
            }

            try {
                const response = await fetch('http://localhost:3000/submit_order', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    alert("Order submitted successfully!");
                    formElement.reset();
                } else {
                    alert("Failed to submit order. Please try again.");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An error occurred. Please try again later.");
            }
        }
    </script>

